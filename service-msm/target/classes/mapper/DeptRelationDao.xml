<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jluzh.msm.dao.DeptRelationDao">

    <resultMap type="com.jluzh.msm.entity.DeptRelation" id="DeptRelationMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="companyId" column="company_id" jdbcType="INTEGER"/>
        <result property="deptId" column="dept_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 批量插入 -->
    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into bfinance.dept_relation(company_id, dept_id, create_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.companyId}, #{entity.deptId}, #{entity.createTime})
        </foreach>
    </insert>
    <!-- 批量插入或按主键更新 -->
    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into bfinance.dept_relation(company_id, dept_id, create_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.companyId}, #{entity.deptId}, #{entity.createTime})
        </foreach>
        on duplicate key update
        company_id = values(company_id) , dept_id = values(dept_id) , create_time = values(create_time)
    </insert>

</mapper>

