<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jluzh.risk.dao.RsRiskDao">

    <resultMap type="com.jluzh.risk.entity.RsRisk" id="RsRiskMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="riskName" column="risk_name" jdbcType="VARCHAR"/>
        <result property="riskCategoryId" column="risk_category_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 批量插入 -->
    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into bfinance.rs_risk(risk_name, risk_category_id, create_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.riskName}, #{entity.riskCategoryId}, #{entity.createTime})
        </foreach>
    </insert>
    <!-- 批量插入或按主键更新 -->
    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into bfinance.rs_risk(risk_name, risk_category_id, create_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.riskName}, #{entity.riskCategoryId}, #{entity.createTime})
        </foreach>
        on duplicate key update
        risk_name = values(risk_name) , risk_category_id = values(risk_category_id) , create_time = values(create_time)
    </insert>

</mapper>

